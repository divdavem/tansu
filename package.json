{
  "name": "@amadeus-it-group/tansu",
  "type": "module",
  "dependencies": {
    "signal-polyfill": "^0.1.0"
  },
  "devDependencies": {
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@microsoft/api-extractor": "^7.39.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-istanbul": "^1.2.1",
    "@vitest/ui": "1.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^13.2.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "pretty-quick": "^4.0.0",
    "rollup": "^4.9.5",
    "rxjs": "^7.8.1",
    "svelte": "^4.2.9",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "zone.js": "^0.14.3"
  },
  "scripts": {
    "test": "vitest run",
    "tdd": "vitest",
    "tdd:ui": "vitest --ui",
    "clean": "rm -rf dist temp",
    "lint": "eslint src/{,**/}*.ts",
    "build:rollup": "rollup --failAfterWarnings -c",
    "build:dts": "tsc -p tsconfig.d.json",
    "build:api": "api-extractor run",
    "build:package": "cp README.md src/package.json dist/package",
    "build": "npm run clean && npm run build:rollup && npm run build:dts && npm run build:api && npm run build:package",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "docs": "typedoc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
