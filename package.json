{
  "name": "@amadeus-it-group/tansu",
  "type": "module",
  "dependencies": {
    "signal-polyfill": "divdavem/signal-polyfill#0b3ef8419b82f67f6aad85f956144063e16466d2"
  },
  "devDependencies": {
    "@angular/common": "^17.3.6",
    "@angular/compiler": "^17.3.6",
    "@angular/compiler-cli": "^17.3.6",
    "@angular/core": "^17.3.6",
    "@angular/platform-browser": "^17.3.6",
    "@angular/platform-browser-dynamic": "^17.3.6",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@microsoft/api-extractor": "^7.43.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitest/coverage-istanbul": "^1.5.3",
    "@vitest/ui": "1.5.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^14.7.1",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "rollup": "^4.17.2",
    "rxjs": "^7.8.1",
    "svelte": "^4.2.15",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "vitest": "^1.5.3",
    "zone.js": "^0.14.4"
  },
  "scripts": {
    "test": "vitest run",
    "tdd": "vitest",
    "tdd:ui": "vitest --ui",
    "clean": "rm -rf dist temp",
    "lint": "eslint src/{,**/}*.ts",
    "build:rollup": "rollup --failAfterWarnings -c",
    "build:dts": "tsc -p tsconfig.d.json",
    "build:api": "api-extractor run",
    "build:package": "cp README.md src/package.json dist/package",
    "build": "npm run clean && npm run build:rollup && npm run build:dts && npm run build:api && npm run build:package",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "docs": "typedoc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
